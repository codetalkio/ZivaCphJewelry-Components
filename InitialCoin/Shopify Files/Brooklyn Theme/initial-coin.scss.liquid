/* Reset the some of the styling on the tables */
#necklace-box-chooser, .necklace-choices, .necklace-choices tbody,
.necklace-choices tr, .necklace-choices td, #necklace-material-chooser {
  background-color: inherit;
}
.necklace-choices tr:first-child td:after, #necklace-box-chooser
tr:first-child td:after, #necklace-material-chooser tr:first-child td:after {
  content: '';
  display: none;
  border-bottom: none;
}
/* Style the choice header text (character, number, gems)*/
.necklace-choice-title {
  width: 100%;
  text-align: left;
  border-bottom: 1px solid black;
}
/* Style the choices themselves */
.necklace-choices td {
  cursor: pointer;
  padding: 5px 15px;
}
.necklace-choices td:hover {
  font-weight: bold;
}
.necklace-choices td span {
  display: block;
  text-align: center;
  line-height: 40px;
}
.necklace-choices.necklace-gems td span img {
  margin-top: 16px !important;
}
/* When a choice is marked as choosen */
.necklace-choices td span.choosen-top {
  background-color: #ECECEC;
  border-top: 1px solid black;
  font-weight: bold;
}
.necklace-choices td span.choosen-left {
  background-color: #ECECEC;
  border-left: 1px solid black;
  font-weight: bold;
}
.necklace-choices td span.choosen-right {
  background-color: #ECECEC;
  border-right: 1px solid black;
  font-weight: bold;
}
.necklace-choices td span.choosen-bottom {
  background-color: #ECECEC;
  border-bottom: 1px solid black;
  font-weight: bold;
}
/* The boxes that indicate which preview box that is being styled */
#necklace-box-chooser td div {
  border: 1px solid black;
  width: 50px;
  height: 50px;
  margin: auto;
  cursor: pointer;
  line-height: 45px;
  text-align: center;
  font-weight: bold;
}
#necklace-box-chooser td div.active {
  border: 3px solid black;
}
#necklace-box-chooser img {
  display: block;
  margin: auto;
  margin-top: -12px;
}
/* The options for the material */
#necklace-material-chooser {
  margin-bottom:80px;
}
#necklace-material-chooser td div {
  margin: auto;
  cursor: pointer;
  line-height: 45px;
  text-align: center;
  font-weight: bold;
}
#necklace-material-chooser td div.active {
  border-bottom: 1px solid black;
  background-color: #ECECEC;
}
/* The necklace box showing the choice on the necklace */
#necklace-preview {
  position: relative;
  width: 367px;
  min-width: 367px;
}
.necklace-box {
  position: absolute;
  font-weight: bold;
}
#necklace-box-top {
  top: 165px;
  left: 132px;
  width: 70px;
}
#necklace-box-left {
  top: 217px;
  left: 80px;
  width: 63px;
}
#necklace-box-right {
  top: 217px;
  left: 190px;
  width: 63px;
}
#necklace-box-bottom {
  top: 271px;
  left: 132px;
  width: 70px;
}
img.gem-in-chooser {
  margin-top: 0px !important;
}
img.gem-in-box {
  margin-top: 0px !important;
  height: 30px;
}
img.component-in-box {
  margin-top: 0px !important;
  height: 30px;
}
#necklace-preview.fix-necklace-preview {
  position: fixed;
  top: 65px;
}
#necklace-preview.absolute-necklace-preview {
  position: absolute;
}
#necklace-preview-image {
  min-width: 367px;
  min-height: 382px;
}